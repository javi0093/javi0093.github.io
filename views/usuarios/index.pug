extends ../layout

block content
  nav.navbar.navbar-dark.bg-dark
  .container-fluid
    a.navbar-brand(href='/') Home
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav
        li.nav-item
          a.nav-link.active(aria-current='page' href='/') Home
        li.nav-item
          a.nav-link(href='/usuarios') usuarios
        li.nav-item
          a.nav-link(href='/bicicletas') Bicicletas
        li.nav-item
          a.nav-link.disabled Disabled



  br 
  br
  hr 
  a.btn.btn-success(href='/usuarios/create') Nuevo Usuario

  br
  br

  table.table
    thead
      tr  
        th(scope='col') #
        th(scope='col') Nombre
        th(scope='col') Email
        th(scope='col') Verificado
        th(scope='col')
        th(scope='col')
    tbody
      each usuario in usuarios
        tr
          td(scope='row') 
            = usuario.id
          td= usuario.nombre
          td= usuario.email
          td= usuario.verificado ? 'SI' : 'NO'
          td
            a.btn(href= 'usuarios/' + usuario.id + '/update') Editar
          td
            form.inline(method='post' action='usuarios/' + usuario.id + '/delete')
                input(type='hidden' name='id' value= usuario.id)
                button.link-button.btn-danger(type='submit' name='submit_param' value='submit_value' class='btn')
                    = 'Eliminar'

  
